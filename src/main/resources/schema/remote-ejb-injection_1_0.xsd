<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:jboss:remote-ejb-injection:1.0"
            xmlns="urn:jboss:remote-ejb-injection:1.0"
            elementFormDefault="unqualified"
            attributeFormDefault="unqualified"
            version="1.0">

    <!-- Root element -->
    <xsd:element name="ejb-injection" type="ejbInjectionType"/>

    <xsd:complexType name="ejbInjectionType">
        <xsd:sequence>
            <xsd:element name="lookup-uri" type="xsd:string" minOccurs="0" maxOccurs="1"/>
            <xsd:element name="ejbs" type="ejbsType" minOccurs="1" maxOccurs="1"/>

        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="ejbsType">
        <xsd:sequence>
            <xsd:element name="ejb" type="ejbType" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>


    <xsd:complexType name="ejbType">
        <xsd:attribute name="class-name" type="xsd:token" use="required" />
        <xsd:attribute name="lookup" type="xsd:token" use="required" />
    </xsd:complexType>
</xsd:schema>

